<header class="p-4 bg-primary text-white text-center d-flex justify-content-center">
    <h1 class="m-0">Eat-Da-Burger!</h1>
    <i class="fas fa-hamburger fa-3x px-2"></i>
</header>

<main class="container p-0 my-4 text-white d-flex">
    <div class="col p-4 mx-2 bg-primary rounded">
        <h2>Uneaten Burgers</h2>
        <hr class="border-white">

        <ul class="list-group text-primary py-3">
            <li class="list-group-item py-2 d-flex justify-content-between align-items-center">
                <p class="m-0">Hamburger</p>
                <button type="button" class="btn btn-outline-primary text-nowrap d-flex align-items-center">
                    <p class="m-0">Devour it!</p>
                    <i class="fas fa-utensils fa-sm px-1"></i>
                </button>
            </li>
            <li class="list-group-item py-2 d-flex justify-content-between align-items-center">
                <p class="m-0">Cheeseburger</p>
                <button type="button" class="btn btn-outline-primary text-nowrap d-flex align-items-center">
                    <p class="m-0">Devour it!</p>
                    <i class="fas fa-utensils fa-sm px-1"></i>
                </button>
            </li>
            <li class="list-group-item py-2 d-flex justify-content-between align-items-center">
                <p class="m-0">Bacon Burger</p>
                <button type="button" class="btn btn-outline-primary text-nowrap d-flex align-items-center">
                    <p class="m-0">Devour it!</p>
                    <i class="fas fa-utensils fa-sm px-1"></i>
                </button>
            </li>
        </ul>
    </div>

    <div class="col p-4 mx-2 bg-primary rounded">
        <h2>Add a Burger</h2>
        <hr class="border-white">

        <form class="align-content-center">
            <label for="add-burger" class="my-2 m-0">Burger Name:</label>
            <input type="text" name="burger-name" id="burger-name" class="my-2 border-0 rounded w-100">
            <button type="submit" class="btn btn-outline-light my-3">Submit</button>
        </form>
    </div>

    <div class="col p-4 mx-2 bg-primary rounded">
        <h2>Eaten Burgers</h2>
        <hr class="border-white">

        <ul class="list-group text-primary py-3">
            <li class="list-group-item py-3">
                <p class="m-0">Hamburger</p>
            </li>
            <li class="list-group-item py-3">
                <p class="m-0">Cheesburger</p>
            </li>
            <li class="list-group-item py-3">
                <p class="m-0">Bacon Burger</p>
            </li>
        </ul>
    </div>
</main>
